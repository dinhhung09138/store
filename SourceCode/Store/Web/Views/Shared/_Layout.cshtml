<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/bootstrap")
    <link href="~/Content/datatable/dataTable.custom.css" rel="stylesheet" />

    @RenderSection("header", required: false)

</head>
<body class="container-fluid">
    @*@{Html.RenderAction("Header", "Home"); }
    @{ Html.RenderAction("Navigation", "Home"); }*@
    
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12" style="min-height: 15px;">
                    Thong bao neu co se hien thi o day
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-sm-10 col-xs-12">
                    @RenderBody()
                </div>
                <div class="col-md-2 col-sm-2 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Thông báo <a href="javascript:;" title="Xem tất cả thông báo"><i class="glyphicon glyphicon-modal-window" style="float: right;"></i></a></h3>
                        </div>
                        <div class="panel-body">
                            Panel content
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Hoạt động gần đây<a href="javascript:;" title="Xem tất cả các hoạt động gần đây"><i class="glyphicon glyphicon-modal-window" style="float: right;"></i></a></h3>
                        </div>
                        <div class="panel-body">
                            Panel content
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*@{ Html.RenderAction("Footer", "Home"); }*@
    

    @Html.Partial("_Loading")
    @Html.Partial("_MultipleModel")
            @Scripts.Render("~/Content/js/bootstrap")
    @RenderSection("script", required: false)
</body>
</html>
