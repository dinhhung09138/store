@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section header{
    
}

<div class="row mrg-top-50">
    <div class="col-lg-4 col-md-4 col-sm-3"></div>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
        @using (Html.BeginForm("forgotpassword", "home", FormMethod.Post, new { @id = "loginForm" }))
        {
            <div class="text-center">
                <img src="/Images/login_logo.png" alt="Nem lụi sài gòn" />
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 background">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2>Quên mật khẩu</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            Email
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <input type="text" value="@ViewBag.email" name="email" id="email" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mrg-button-20 text-center">
                            <button type="submit" class="btn btn-default btn-blue text-white no-border margin-right-20">
                                <i class="fa fa-envelope" aria-hidden="true"></i>Lấy mật khẩu
                            </button>
                            <a class="btn btn-default btn-green text-white no-border" href="/home/login">
                                <i class="fa fa-reply" aria-hidden="true"></i>Quay lại
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-4 col-md-4 col-sm-3"></div>
</div>

@section script{
    @if (TempData["message"] != null)
    {
        <script>
            $(document).ready(function () {
                notification('Thông báo', '@TempData["message"]', '@Resources.Notification.TypeWarning');
            });
        </script>
    }
}

