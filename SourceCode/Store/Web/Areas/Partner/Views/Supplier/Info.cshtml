<script>
    var id ='@Html.Raw(ViewBag.id.ToString())';
    $(document).ready(function () {
        scrollBodyModal('');
        getItem(id);
    });

    function getItem(id) {
        $('#loadingModel').modal('show');
        $.ajax({
            url: '/partner/supplier/GetItem',
            type: 'get',
            dataType: 'json',
            contentType: 'application/json',
            data: { id: id },
            success: function (result) {
                console.log(result);
                $('#Code').html(result.Code);
                $('#Name').html(result.Name);
                $('#Phone').html(result.Phone);
                $('#Address').html(result.Address);
                $('#Email').html(result.Email);
                $('#GroupName').html(result.GroupName);
                $('#TaxCode').html(result.TaxCode);
                $('#CompanyName').html(result.CompanyName); 
                $('#Notes').html(result.Notes);
                $('#Avatar').attr('src', result.Avatar);
                $.each(result.StockIn, function (idx, item) {
                    var row = $('<tr/>');
                    var td1 = $('<td/>').attr('style', 'vertical-align: middle;');
                    td1.append($('<span/>').attr('class', 'removeItem').html(idx + 1));
                    var td2 = $('<td/>').attr('style', 'vertical-align: middle;').html(item.Code); 
                    var td3 = $('<td/>').attr('style', 'vertical-align: middle;').html(item.StockInDateString);
                    var td4 = $('<td/>').attr('style', 'vertical-align: middle;').html(item.EmployeeName);
                    var td5 = $('<td/>');
                    td5.append($('<label/>').attr('class', 'number').attr('style', 'float:right; margin-top:5px;').html(formatNumberValue(item.TotalMoney, 1)));
                    row.append(td1).append(td2).append(td3).append(td4).append(td5);
                    $('#tableHistoryStockin tbody').append(row);
                });
                return;
                console.log(result.details.length);
                $('#TotalCount').html(formatNumberValue(result.details.length, 1));
                $('#TotalMoney').html(formatNumberValue(result.TotalMoney, 1));
                $('#Discount').html(formatNumberValue(result.Discount, 1));
                $('#Total').html(formatNumberValue(result.TotalMoney - result.Discount, 1));
                $('#Paymentable').html(0);
                $('#loadingModel').modal('hide');
            }
        });
    }

</script>