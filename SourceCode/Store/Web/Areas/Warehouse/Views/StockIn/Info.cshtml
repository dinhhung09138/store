<script src="~/Content/accounting.min.js"></script>
<script>
    var id ='@Html.Raw(ViewBag.id.ToString())';
    $(document).ready(function () {
        scrollBodyModal('');
       getItem(id);
    });

    function getItem(id) {
        $('#loadingModel').modal('show');
        $.ajax({
            url: '/Warehouse/StockIn/GetItem',
            type: 'get',
            dataType: 'json',
            contentType: 'application/json',
            data: { id: id },
            success: function (result) {
                $('#Code').html(result.Code);
                $('#IsFinishName').html(result.IsFinishName);
                $('#StockInDateString').html(result.StockInDateString);
                $('#BranchName').html(result.BranchName);
                $('#SupplierName').html(result.SupplierName);
                $('#EmployeeName').html(result.EmployeeName); 
                $('#Notes').html(result.Notes);

                $.each(result.details, function (idx, item) {
                    var row = $('<tr/>');
                    var td1 = $('<td/>').attr('style', 'vertical-align: middle;');
                    td1.append($('<span/>').attr('class', 'removeItem').html(idx + 1));
                    var td2 = $('<td/>').attr('style', 'vertical-align: middle;').html(item.GoodsName);
                    var td3 = $('<td/>');
                    td3.append($('<label/>').attr('class', 'number').attr('style', 'float:right; margin-top:5px;').html(formatNumberValue(item.Price, 1)));
                     var td4 = $('<td/>');
                     td4.append($('<label/>').attr('class', 'number').attr('style', 'float:right; margin-top:5px;').html(formatNumberValue(item.Discount, 1)));
                    var td5 = $('<td/>');
                    td5.append($('<label/>').attr('class', 'number').attr('style', 'float:right; margin-top:5px;').html(formatNumberValue(item.Number, 1)));
                    var td6 = $('<td/>');
                    td6.append($('<label/>').attr('class', 'number').attr('style', 'float:right; margin-top:5px; color: blue;').html(formatNumberValue(item.Total, 1)));
                    row.append(td1).append(td2).append(td3).append(td4).append(td5).append(td6);
                    $('#tableStockin tbody').append(row);
                });
                console.log(result.details.length);
                $('#TotalCount').html(formatNumberValue(result.details.length, 1));
                $('#TotalMoney').html(formatNumberValue(result.TotalMoney, 1)); 
                $('#Discount').html(formatNumberValue(result.Discount, 1));
                $('#Total').html(formatNumberValue(result.TotalMoney - result.Discount, 1));
                $('#Paymentable').html(0);
                $('#loadingModel').modal('hide');
            }
        });
    }

</script>